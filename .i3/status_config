general {
       output_format = "i3bar"
       colors = true
       interval = 5
}

order += "disk /"
order += "run_watch DHCP"
order += "wireless wlan2"
order += "ethernet eth0"
order += "battery 0"
order += "cpu_temperature 0"
order += "volume master"
order += "tztime local"

wireless wlan2 {
       format_up = "W: (%quality at %essid, %bitrate) %ip"
       format_down = "W: down"
}

ethernet eth0 {
       # if you use %speed, i3status requires the cap_net_admin capability
       format_up = "E: %ip (%speed)"
       format_down = "E: down"
}

battery 0 {
       format = "%status %percentage"
       format_down = "No battery"
       path = "/sys/class/power_supply/BAT%d/uevent"
       low_threshold = 10
}

run_watch DHCP {
       pidfile = "/var/run/dhclient*.pid"
}

tztime local {
       format = "%Y-%m-%d %H:%M:%S"
}

cpu_temperature 0 {
       format = "T: %degrees Â°C"
       path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
}

disk "/" {
       format = "%free / %total"
}

volume master {
        format = "Vol: %volume"
        format_muted = "Vol: MUTE"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}